#pragma once

#include "configuration.h"

#include <Pixic/core/classes/typedefs/Var>

/**
 * class Container;
 */
typedef struct Container Container;

enum
{
	INT8,
	INT16,
	INT32,
	#ifdef x64
		INT64,
	#endif
	FLOAT32
	#ifdef x64
		, FLOAT64
	#endif
};
#ifdef x32
	#define INT INT32
	#define FLOAT FLOAT32
#endif
#ifdef x64
	#define INT INT64
	#define FLOAT FLOAT64
#endif
#define COLOR INT32

Container Container_new(Int width, Int height, int type);
Var *Container_get(Container *self, int index);
void Container_set(Container *self, int index, Var *);
void Container_delete(Container *self);