#pragma once

#include "Pixic/core library/C OOP.h"
#include <Pixic/core/typedefs/Var>

enum
{
	Type_null,
	Type_int,
	Type_float
};

class (Var)
{
	const char *name;
	union
	{
		Int i;
		Float f;
	};
	int type;
};
inline Var Var_new(const char *name)
{
	Var self;

	self.name=name;

	self.type=Type_null;

	return self;
}
inline Var Var_new2(Int number)
{
	Var self;

	self.i=number;

	self.type=Type_int;

	return self;
}
inline Var Var_new3(Float number)
{
	Var self;

	self.f=number;

	self.type=Type_float;

	return self;
}
inline void Var_set(Var *self, Var *value)
{
	self->i=value->i;
	self->type=value->type;
}