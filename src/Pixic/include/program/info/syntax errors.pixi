/**
 * @file syntax errors.pixi
 *
 * Dependencies.
 * configuration/language.pixi
 */

fn syntax_error($text, $positions)
{
	fprintf(STDERR, text_error, arguments[0])
	fprintf(STDERR, text_syntax_error, $text.file_name, $text.lines[2, $positions.line])
}
fn syntax_error_invalid_number($text, $positions)
{
	syntax_error($text, $positions)
	fprintf(STDERR, text_syntax_error_invalid_number)
	exit(64)
}
fn syntax_error_expected($text, $positions, $char)
{
	syntax_error($text, $positions)
	fprintf(STDERR, text_syntax_error_expected, $char)
	exit(65)
}
fn syntax_error_expected_operand($text, $positions)
{
	syntax_error($text, $positions)
	fprintf(STDERR, text_syntax_error_expected_operand)
	exit(66)
}
fn syntax_error_expected_x($text, $positions)
{
	syntax_error($text, $positions)
	fprintf(STDERR, text_syntax_error_expected_x)
	exit(67)
}
fn syntax_error_expected_y($text, $positions)
{
