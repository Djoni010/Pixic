/**
 * @file program/translator/parser/parser.pixi
 *
 * Dependencies.
 * program/translator/parser/Position.pixi
 * program/translator/parser/parsers groups.pixi
 */

fn parse($text)
{
	$positions=Stack_new(INT)
	Stack_push($positions, Position_new($text.lines[0, 0], 0))
	$statements=Twoended_list_new()
	while 1
	{
		if skip_spaces($text, $positions)
		{
			logf("Stack size: %i\n", $positions.pointer+1)
			reject_position($positions)
			remove($positions)
			ret($statements)
		}
		$statement=parse_multiple(statements, $text, $positions)
		if $statement<0
		{
			syntax_error_invalid_statement($text, $positions)
		}
		Twoended_node_set($statement, $statements)
	}
}